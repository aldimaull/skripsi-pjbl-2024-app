generator client {
  provider      = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider      = "postgresql"
  url           = env("DATABASE_URL")
  directUrl     = env("DIRECT_URL")
}

enum UserRole {
  ADMIN
  SISWA
  GURU
}

model User {
  id            Int      @id @unique @default(autoincrement())
  username      String   @unique @db.VarChar(255)
  password      String
  name          String   @default("") @db.VarChar(255)
  role          UserRole @default(SISWA)
  createdAt     DateTime @default(now())
  updateAt      DateTime @updatedAt
  projects      TookProject[]
  responses     Response[]
  nilai         Nilai[]

  @@map("User")
}

model ProjectList {
  id            Int      @id @unique @default(autoincrement())
  name          String   @default("") @db.VarChar(255)
  content       String
  deadline      DateTime
  createdAt     DateTime @default(now())
  updateAt      DateTime @updatedAt
  users         TookProject[]

  @@map("ProjectList")
}

model TookProject {
  projectId     Int
  userId        Int
  deadlineFrom  DateTime
  deadlineTo    DateTime
  submission    String?
  status        String
  rencana       String
  createdAt     DateTime @default(now())
  updateAt      DateTime @updatedAt
  project       ProjectList      @relation(fields: [projectId], references:   [id])
  user          User         @relation(fields: [userId], references: [id])

  @@id([projectId, userId])
  @@map("TookProject")
}

model MateriList {
  id            Int      @id @unique @default(autoincrement())
  name          String   @default("") @db.VarChar(255)
  description   String
  content       String
  createdAt     DateTime @default(now())
  updateAt      DateTime @updatedAt
}

model Assessment {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  questions     Question[]
  nilai         Nilai[]
  createdAt     DateTime @default(now())
  updateAt      DateTime @updatedAt
}

model Question {
  id            Int      @id @default(autoincrement())
  content       String
  assessmentId  Int
  assessment    Assessment @relation(fields: [assessmentId], references: [id])
  responses     Response[]
  options       String[]
  kunci         String
  createdAt     DateTime @default(now())
  updateAt      DateTime @updatedAt
}

model Response {
  id              Int       @id @default(autoincrement())
  questionId      Int
  userId          Int
  selectedOption  String
  question        Question  @relation(fields: [questionId], references: [id])
  user            User      @relation(fields: [userId], references: [id])
  createdAt       DateTime  @default(now())
  updateAt        DateTime @updatedAt
}

model Nilai {
  id              Int       @id @default(autoincrement())
  assessmentId    Int
  userId          Int
  nilaiAssessment Int
  assessment      Assessment  @relation(fields: [assessmentId], references: [id])
  user            User      @relation(fields: [userId], references: [id])
  createdAt       DateTime  @default(now())
  updateAt        DateTime @updatedAt
}
